@model Order

<div class="row mb-5">
	<h3>Checkout</h3>
	<form asp-action="CheckOut" method="post" class="form-horizontal">
		<div class="form-group">
			<label asp-for="Name"></label>
			<div class="col-12">
				<input asp-for="Name" class="form-controler" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="SurName"></label>
			<div class="col-12">
				<input asp-for="SurName" class="form-controler" />
				<span asp-validation-for="SurName" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Address"></label>
			<div class="col-12">
				<input asp-for="Address" class="form-controler" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<label asp-for="Phone"></label>
			<div class="col-12">
				<input asp-for="Phone" class="form-controler" />
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		</div>
		<input class="btn btn-success" type="submit" value="Checkout" />
	</form>
</div>